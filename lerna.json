{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "version": {
      "conventionalCommits": true,
      "changelogPreset": "@hzcore/conventional-changelog"
    },
    "publish": {
      "allowBranch": [
        "master",
        "0.1"
      ],
      "ignoreChanges": [
        "*.md"
      ]
    },
    "init": {
      "exact": true
    }
  },
  "packages": [
    "packages/animations/*",
    "packages/behaviors/*",
    "packages/conventional-commits/*",
    "packages/simple-actions/*"
  ]
}
