{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "version": {
      "conventionalCommits": true,
      "changelogPreset": "./conventional-changelog.js"
    },
    "publish": {
      "allowBranch": ["master", "0.1"],
      "ignoreChanges": [
        "*.md"
      ]
    },
    "init": {
      "exact": true
    }
  },
  "packages": [
    "packages/animations/*",
    "packages/behaviors/*",
    "packages/simple-actions/*"
  ]
}
