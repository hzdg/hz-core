{
  "name": "hz-core",
  "version": "0.0.3",
  "description": "HZ's internal library of React Components",
  "main": "index.js",
  "repository": "git@github.com:hzdg/hz-core.git",
  "author": "elainen <elaineh@hzdg.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "lerna bootstrap && node ./scripts/build.js",
    "commit": "git-cz",
    "commitmsg": "commitlint -E GIT_PARAMS",
    "preparecommitmsg": "commit-template",
    "lint": "eslint ./scripts ./packages & flow check",
    "preversion": "yarn test && yarn build",
    "styleguide": "styleguidist server",
    "test": "jest",
    "create-package": "./scripts/create-package.sh"
  },
  "publishConfig": {
    "registry": "http://npmregistry.hzdg.com"
  },
  "workspaces": [
    "packages/animations/*",
    "packages/behaviors/*",
    "packages/conventional-commits/*",
    "packages/simple-actions/*"
  ],
  "config": {
    "commitizen": {
      "path": "@hzcore/commitizen-config"
    }
  },
  "dependencies": {
    "@babel/cli": "7.2.3",
    "@babel/core": "7.3.4",
    "@babel/plugin-external-helpers": "7.2.0",
    "@babel/plugin-proposal-class-properties": "7.3.4",
    "@babel/plugin-proposal-object-rest-spread": "7.3.4",
    "@babel/plugin-transform-runtime": "7.3.4",
    "@babel/polyfill": "7.2.5",
    "@babel/preset-env": "7.3.4",
    "@babel/preset-flow": "7.0.0",
    "@babel/preset-react": "7.0.0",
    "@babel/runtime": "7.3.4",
    "@commitlint/cli": "^7.5.2",
    "@lerna/project": "^3.13.1",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "24.5.0",
    "commit-template": "1.0.0",
    "commitizen": "3.0.7",
    "eslint": "5.15.1",
    "eslint-config-hzdg": "1.1.0",
    "eslint-config-prettier": "4.1.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-jsx-a11y": "6.2.1",
    "eslint-plugin-prettier": "3.0.1",
    "eslint-plugin-react": "7.12.4",
    "eslint-plugin-react-hooks": "1.5.1",
    "express": "^4.16.4",
    "flow-bin": "0.94.0",
    "flow-typed": "2.5.1",
    "glob": "^7.1.2",
    "husky": "1.3.1",
    "invariant": "^2.2.4",
    "jest": "24.5.0",
    "lerna": "3.13.1",
    "ncp": "^2.0.0",
    "prettier": "1.16.4",
    "react": "16.8.4",
    "react-dom": "16.8.4",
    "react-motion": "^0.5.2",
    "react-spring": "^8.0.15",
    "react-styleguidist": "9.0.4",
    "react-test-renderer": "16.8.4",
    "rimraf": "2.6.3",
    "rollup": "1.6.0",
    "rollup-plugin-babel": "4.3.2",
    "rollup-plugin-commonjs": "9.2.1",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "4.0.1",
    "rollup-plugin-uglify-es": "0.0.1",
    "symbol-iterator": "1.0.2",
    "tapable": "^2.0.0-beta.3",
    "webpack": "4.29.6",
    "webpack-blocks": "^2.0.0-rc",
    "yurnalist": "1.0.5"
  },
  "devDependencies": {
    "eslint-plugin-eslint-comments": "3.1.1"
  }
}
