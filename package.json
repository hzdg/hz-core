{
  "name": "hz-core",
  "version": "0.0.3",
  "description": "HZ's internal library of React Components",
  "main": "index.js",
  "repository": "git@github.com:hzdg/hz-core.git",
  "author": "elainen <elaineh@hzdg.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "./node_modules/.bin/lerna bootstrap --loglevel=error && yarn build-packages",
    "build-docz": "yarn build-packages && ./node_modules/.bin/docz build",
    "build-packages": "./node_modules/.bin/build-packages",
    "clean": "yarn build-packages --clean",
    "commit": "./node_modules/.bin/git-cz",
    "create-package": "./node_modules/.bin/create-package",
    "develop": "yarn build-packages && ./node_modules/.bin/docz dev",
    "lint": "./node_modules/.bin/eslint --ext .js,.jsx,.ts,.tsx ./packages",
    "preversion": "yarn test && yarn build",
    "start": "yarn develop",
    "typecheck": "./node_modules/.bin/tsc --noEmit",
    "test": "./node_modules/.bin/jest",
    "test-publish": "./node_modules/.bin/test-publish"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "commit-template",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "publishConfig": {
    "registry": "http://npmregistry.hzdg.com"
  },
  "workspaces": [
    "packages/animations/*",
    "packages/behaviors/*",
    "packages/conventional-commits/*",
    "packages/simple-actions/*",
    "packages/utilities/*"
  ],
  "config": {
    "commitizen": {
      "path": "@hzcore/commitizen-config"
    }
  },
  "dependencies": {
    "@babel/cli": "7.4.3",
    "@babel/core": "7.4.3",
    "@babel/plugin-external-helpers": "7.2.0",
    "@babel/plugin-proposal-class-properties": "7.4.0",
    "@babel/plugin-proposal-object-rest-spread": "7.4.3",
    "@babel/plugin-transform-runtime": "7.4.3",
    "@babel/polyfill": "7.4.3",
    "@babel/preset-env": "7.4.3",
    "@babel/preset-react": "7.0.0",
    "@babel/preset-typescript": "7.3.3",
    "@babel/runtime": "7.4.3",
    "@commitlint/cli": "^7.5.2",
    "@types/debug": "4.1.3",
    "@types/glob": "7.1.1",
    "@types/invariant": "2.2.29",
    "@types/jest": "24.0.11",
    "@types/react": "16.8.12",
    "@types/react-dom": "16.8.3",
    "@types/react-motion": "0.0.28",
    "@types/shallowequal": "1.1.1",
    "@types/warning": "3.0.0",
    "@types/zen-observable": "0.8.0",
    "@typescript-eslint/eslint-plugin": "1.6.0",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "24.7.1",
    "commit-template": "1.0.0",
    "commitizen": "3.0.7",
    "docz": "1.0.4",
    "docz-plugin-netlify": "1.1.4",
    "docz-theme-default": "1.0.4",
    "eslint": "5.15.1",
    "eslint-config-hzdg": "1.2.1",
    "eslint-config-prettier": "4.1.0",
    "eslint-import-resolver-jest": "2.1.1",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-eslint-comments": "3.1.1",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-jest": "22.3.2",
    "eslint-plugin-jsx-a11y": "6.2.1",
    "eslint-plugin-prettier": "3.0.1",
    "eslint-plugin-react": "7.12.4",
    "eslint-plugin-react-hooks": "1.5.1",
    "express": "^4.16.4",
    "glob": "^7.1.2",
    "husky": "1.3.1",
    "invariant": "^2.2.4",
    "jest": "24.7.1",
    "jest-dom": "3.1.3",
    "jest-watch-typeahead": "0.3.0",
    "jest-watch-yarn-workspaces": "1.1.0",
    "lerna": "3.13.1",
    "ncp": "^2.0.0",
    "netlify-cli": "2.9.1",
    "prettier": "1.16.4",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "react-motion": "^0.5.2",
    "react-spring": "^8.0.15",
    "react-test-renderer": "16.8.4",
    "react-testing-library": "6.1.2",
    "symbol-iterator": "1.0.2",
    "typescript": "3.4.1"
  },
  "resolutions": {
    "docz-plugin-netlify/**/docz-core": "^1.0.4"
  }
}
